<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectGameModeActivity">

    <Button
        android:id="@+id/singlePlayerGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Single Player Game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/doublePlayerGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Double Player Game"
        app:layout_constraintEnd_toEndOf="@+id/singlePlayerGameBtn"
        app:layout_constraintStart_toStartOf="@+id/singlePlayerGameBtn"
        app:layout_constraintTop_toBottomOf="@+id/singlePlayerGameBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>