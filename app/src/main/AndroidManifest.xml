<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dicegame">

    <application
        android:allowBackup="true"
        android:icon="@drawable/dice_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dice_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiceGame">

        <activity android:name=".SinglePlayerGameActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".SelectGameModeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DoublePlayerInfoActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>